<div class="new-content">
    <h2>Articles:</h2>
    {{#each articles}}
    {{#unless saved }}
    <div class="card news-card">
        <div class="empty">
            
        </div>
        <div class="card-body">
            <a class="card-title" href="{{link}}">
                {{title}}</a>
            {{!-- <a class="card-text" href="">Link</a> --}}
            <button class="btn btn-sm btn-primary save-btn">Save</button>
        </div>
    </div>

    {{/unless }}
    {{/each }}

</div>

